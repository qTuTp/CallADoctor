<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RemoveDoctorPopUp">

    <androidx.cardview.widget.CardView
        android:layout_width="385dp"
        android:layout_height="600dp"
        app:cardBackgroundColor="@color/popUp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        android:id="@+id/pop_up_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/searchDoctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white"
                android:hint="@string/searchDoctor"
                android:textColorHint="@color/blue"
                app:boxStrokeColor="@color/blue"
                app:endIconMode="clear_text"
                app:startIconTint="@color/blue"
                app:hintTextColor="@color/blue"
                app:startIconDrawable="@drawable/search_icon"
                app:layout_constraintHeight_max="60dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:elevation="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/doctorListTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/doctorList"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/roboto_bold"
                android:textSize="23sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/darkBlue"
                app:layout_constraintTop_toBottomOf="@id/searchDoctor"
                app:layout_constraintStart_toStartOf="parent"

                />

            <androidx.cardview.widget.CardView
                android:id="@+id/doctor1"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/lightBlue"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toBottomOf="@id/doctorListTitle"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/doctor_profile_logo"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="20dp"
                        android:id="@+id/doctor_profile_icon1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctorName"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        app:layout_constraintStart_toEndOf="@id/doctor_profile_icon1"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="20dp"
                        android:id="@+id/doctor_name1"
                        />
                    <TextView
                        android:id="@+id/phoneTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctorPhoneTitle"
                        android:textSize="13dp"
                        app:layout_constraintStart_toEndOf="@id/doctor_profile_icon1"
                        app:layout_constraintTop_toBottomOf="@id/doctor_name1"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="1dp" />

                    <TextView
                        android:id="@+id/doctorPhone1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctorPhone"
                        android:textSize="13dp"
                        app:layout_constraintStart_toEndOf="@id/phoneTitle1"
                        app:layout_constraintTop_toBottomOf="@id/doctor_name1"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="1dp" />

                    <TextView
                        android:id="@+id/emailTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctorEmailTitle"
                        android:textSize="13dp"
                        app:layout_constraintStart_toEndOf="@id/doctor_profile_icon1"
                        app:layout_constraintTop_toBottomOf="@id/phoneTitle1"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="1dp" />

                    <TextView
                        android:id="@+id/doctorEmail1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctorEmail"
                        android:textSize="13dp"
                        app:layout_constraintStart_toEndOf="@id/emailTitle1"
                        app:layout_constraintTop_toBottomOf="@id/doctorPhone1"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="1dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/doctor2"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/lightBlue"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toBottomOf="@id/doctor1"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/doctor_profile_logo"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="20dp"
                        android:id="@+id/doctor_profile_icon2" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctorName"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        app:layout_constraintStart_toEndOf="@id/doctor_profile_icon2"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="20dp"
                        android:id="@+id/doctor_name2"
                        />
                    <TextView
                        android:id="@+id/phoneTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctorPhoneTitle"
                        android:textSize="13dp"
                        app:layout_constraintStart_toEndOf="@id/doctor_profile_icon2"
                        app:layout_constraintTop_toBottomOf="@id/doctor_name2"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="1dp" />

                    <TextView
                        android:id="@+id/doctorPhone2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctorPhone"
                        android:textSize="13dp"
                        app:layout_constraintStart_toEndOf="@id/phoneTitle2"
                        app:layout_constraintTop_toBottomOf="@id/doctor_name2"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="1dp" />

                    <TextView
                        android:id="@+id/emailTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctorEmailTitle"
                        android:textSize="13dp"
                        app:layout_constraintStart_toEndOf="@id/doctor_profile_icon2"
                        app:layout_constraintTop_toBottomOf="@id/phoneTitle2"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="1dp" />

                    <TextView
                        android:id="@+id/doctorEmail2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctorEmail"
                        android:textSize="13dp"
                        app:layout_constraintStart_toEndOf="@id/emailTitle2"
                        app:layout_constraintTop_toBottomOf="@id/doctorPhone2"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="1dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/doctor3"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/lightBlue"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintTop_toBottomOf="@id/doctor2"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/doctor_profile_logo"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="20dp"
                        android:id="@+id/doctor_profile_icon3" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctorName"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        app:layout_constraintStart_toEndOf="@id/doctor_profile_icon3"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="20dp"
                        android:id="@+id/doctor_name3"
                        />
                    <TextView
                        android:id="@+id/phoneTitle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctorPhoneTitle"
                        android:textSize="13dp"
                        app:layout_constraintStart_toEndOf="@id/doctor_profile_icon3"
                        app:layout_constraintTop_toBottomOf="@id/doctor_name3"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="1dp" />

                    <TextView
                        android:id="@+id/doctorPhone3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctorPhone"
                        android:textSize="13dp"
                        app:layout_constraintStart_toEndOf="@id/phoneTitle3"
                        app:layout_constraintTop_toBottomOf="@id/doctor_name3"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="1dp" />

                    <TextView
                        android:id="@+id/emailTitle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctorEmailTitle"
                        android:textSize="13dp"
                        app:layout_constraintStart_toEndOf="@id/doctor_profile_icon3"
                        app:layout_constraintTop_toBottomOf="@id/phoneTitle3"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="1dp" />

                    <TextView
                        android:id="@+id/doctorEmail3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctorEmail"
                        android:textSize="13dp"
                        app:layout_constraintStart_toEndOf="@id/emailTitle3"
                        app:layout_constraintTop_toBottomOf="@id/doctorPhone3"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="1dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/PopUpRemoveButton"
                android:layout_width="140dp"
                android:layout_height="39dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/more_button_background"
                android:text="Remove Doctor"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/PopUpCancelRemove"
                android:layout_width="140dp"
                android:layout_height="39dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/white_button_background"
                android:text="Cancel"
                android:textSize="17dp"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>