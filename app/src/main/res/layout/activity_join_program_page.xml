<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationPage"
    android:background="@drawable/login_background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Program Registration"
                android:textSize="30dp"
                android:textColor="@color/darkBlue"
                android:layout_marginTop="20dp"

                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/clinicName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/title"
                android:hint="Clinic Name"
                app:boxStrokeColor="@color/blue"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/blue"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/clinicName"
                android:hint="Email"
                app:boxStrokeColor="@color/blue"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/blue"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/email"
                android:hint="Phone"
                app:boxStrokeColor="@color/blue"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/blue"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/latitude"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/phone"
                android:hint="Latitude"
                app:boxStrokeColor="@color/blue"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/blue"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/longitude"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_weight="1"
                android:layout_marginTop="10dp"
                app:errorEnabled="true"



                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"

                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/longitude"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/phone"
                android:hint="Longitude"
                app:boxStrokeColor="@color/blue"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/blue"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/latitude"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintHorizontal_weight="1"
                android:layout_marginTop="10dp"
                app:errorEnabled="true"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/latitude"
                android:hint="@string/address"
                app:boxStrokeColor="@color/blue"
                app:endIconMode="clear_text"
                app:hintTextColor="@color/blue"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"



                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="4"
                    android:maxLines="8"
                    android:gravity="top|start"

                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/registerButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/register"
                android:textColor="@color/white"
                android:backgroundTint="@color/darkBlue"
                style="@style/Widget.MaterialComponents.Button"
                app:layout_constraintTop_toBottomOf="@id/address"
                app:layout_constraintStart_toStartOf="@id/address"
                app:layout_constraintEnd_toStartOf="@id/backButton"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintHeight_min="54dp"



                app:layout_constraintHorizontal_weight="1"


                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textColor="@color/darkBlue"
                android:backgroundTint="@color/white"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:layout_constraintTop_toBottomOf="@id/address"
                app:layout_constraintEnd_toEndOf="@id/address"
                app:layout_constraintStart_toEndOf="@id/registerButton"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintHorizontal_weight="1"
                app:strokeColor="@color/darkBlue"
                app:layout_constraintHeight_min="54dp"



                />

        </androidx.constraintlayout.widget.ConstraintLayout>






    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>